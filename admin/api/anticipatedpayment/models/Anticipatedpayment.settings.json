{
  "connection": "default",
  "collectionName": "anticipatedpayment",
  "info": {
    "name": "anticipatedpayment",
    "description": ""
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "recipientName": {
      "type": "string",
      "required": true
    },
    "recipientEmail": {
      "type": "email",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "amount": {
      "type": "integer",
      "required": true
    },
    "comments": {
      "type": "text"
    },
    "user": {
      "model": "user",
      "plugin": "users-permissions"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Unpayed",
        "Payed"
      ],
      "default": "Unpayed"
    },
    "sumPayed": {
      "type": "decimal"
    },
    "receiptNumber": {
      "type": "integer"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Cheque",
        "Bank Transfer",
        "Defrayal",
        "Cash"
      ]
    },
    "accountNumber": {
      "type": "integer"
    }
  }
}