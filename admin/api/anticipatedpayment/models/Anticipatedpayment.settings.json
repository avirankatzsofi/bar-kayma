{
  "connection": "default",
  "collectionName": "anticipatedpayment",
  "info": {
    "name": "anticipatedpayment",
    "description": ""
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "placeInLine": {
      "type": "integer",
      "autoIncrement": true
    },
    "recipientName": {
      "type": "string",
      "required": true
    },
    "recipientEmail": {
      "type": "email",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "amount": {
      "type": "integer",
      "required": true
    },
    "comments": {
      "type": "text"
    },
    "user": {
      "model": "user",
      "plugin": "users-permissions"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Unpayed",
        "Payed"
      ],
      "default": "Unpayed"
    },
    "sumPayed": {
      "type": "decimal"
    },
    "receiptNumber": {
      "type": "integer"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Cheque",
        "Bank Transfer",
        "Defrayal",
        "Cash",
        "Eventer",
        "Other"
      ]
    },
    "contact": {
      "default": "",
      "type": "string"
    },
    "accountNumber": {
      "default": "0 לא צוין",
      "type": "enumeration",
      "enum": [
        "51 הכנסות מפעילות/תוכן",
        "52 הכנסות משירותים",
        "53 הכנסות ממכירות",
        "54 הכנסות מתרומות",
        "55 הכנסות מתמיכות",
        "56 הכנסות מקרנות",
        "השקעה עצמית 58",
        "הכנסות אחר 59",
        "60 הכנסות פנימיות",
        "0 לא צוין"
      ]
    },
    "paymentDate": {
      "default": "",
      "type": "date"
    }
  }
}